@{
}

@model IEnumerable<string>

<div class="d-grid gap-2" style="display:grid; justify-items:stretch;">
    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" asp-route-teamName="">Home</a>


    @foreach (string t in Model)
    {
        <a class="btn @(ViewBag.SelectedTeam == t ? "btn-primary" : "btn-outline-primary")" asp-controller="Home" asp-action="Index" asp-route-teamName="@t">@t</a>
    }
</div>